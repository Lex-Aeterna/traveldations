<h1>Enter a new destination:</h1>

<%= form_with(model: @destination, data: { turbo: false }, local: true) do |f| %>
<p> 
  <%= f.label :country%> <br>
  <%= f.text_field :country%>
</p>
<p> 
  <%= f.label :city%> <br>
  <%= f.text_field :city%></p>
</p>
<p> 
  <%= f.label :description%> <br>
  <%= f.text_area :description%></p>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>