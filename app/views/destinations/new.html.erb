<h1 class="my-4 text-center">Enter new destination</h1>
<div class="text-center">
  <%= link_to 'Back', destinations_path, class: "btn btn-outline-light btn-md" %>
</div>
<% if @destination.errors.any? %>

<h2>The following errors occured:</h2>
  <% @destination.errors.full_messages.each do |error_message| %>
    <li><%= error_message %></li>
  <% end %>
<% end %>
<div class ="col d-flex justify-content-center" style= "margin-top: 2em">
  <div class="card text-bg-dark border-info" style="width: 80%">
    <%= form_with(model: @destination, data: { turbo: false }, local: true) do |f| %>
    <div class="row g-0" style="height: 400px">
        <div class="card-img-overlay">
          <p class="card-text">
            <%= f.label :image %> <br>
            <%= f.file_field :image %>
          </p>
          <p class="card-text">
            <%= f.label :country%> <br>
            <%= f.text_field :country%>
          </p>
          <p class="card-text">
            <%= f.label :city%> <br>
            <%= f.text_field :city%>
          </p>
          <p class="card-text">  
            <%= f.label :description%> <br>
            <%= f.text_area :description%></p>
          <p>
          <p>
            <%= f.submit %>
          </p>
      </div>
    </div>
    <% end %>
  </div>
</div>