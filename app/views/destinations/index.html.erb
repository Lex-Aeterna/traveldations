<h1>Showing all destinations</h1>
<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>City</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @destination.each do |destination| %>
    <tr>
      <td><%= destination.country %></td>
      <td><%= destination.city %></td>
      <td><%= destination.description %></td>
      <td> <%= link_to 'View', destination_path(destination.id) %> </td>
      <td> <%= link_to 'Edit', edit_destination_path(destination.id) %></td>
      <td> <%= link_to 'Delete', destination_path(destination.id), data: {turbo_method: :delete} %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
